{
    "manifest_version": 3,
    "name": "useless_input",
    "version": "1.0",

    "description": "adds new ways to input data",

    "permissions":
    [
        "tabs"
    ],
    
    "action":
    {
        "default_popup" : "/popup/popup.html"
    },

    "content_scripts":
    [
        {
            "matches" : ["<all_urls>"],
            "run_at": "document_idle",
            "js": [
                "/utillity/ColorUtils.js",

                "/contentscripts/ColorPicker.js",

                "script.js"
            ],
            "css" : ["style.css"]
        }
    ]
}

